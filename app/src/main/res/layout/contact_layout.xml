<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CardView for the LinearLayout containing buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- LinearLayout for containing all elements inside the CardView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact Via Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Via:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- WhatsApp Horizontal Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <!-- WhatsApp Label -->
                <TextView
                    android:id="@+id/whatsapp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@android:color/black" />

                <!-- WhatsApp Icon -->
                <ImageView
                    android:id="@+id/whatsapp_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_whatsapp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Phone Call Horizontal Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <!-- Phone Call Label -->
                <TextView
                    android:id="@+id/call_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Call"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@android:color/black" />

                <!-- Call Button -->
                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_call"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Message Horizontal Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">

                <!-- Message Label -->
                <TextView
                    android:id="@+id/message_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@android:color/black" />

                <!-- Message Button -->
                <ImageView
                    android:id="@+id/message_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_message"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
